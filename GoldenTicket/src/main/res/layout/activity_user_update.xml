<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include
            layout="@layout/toolbar_drawer"/>
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                tools:context=".Activity.UserUpdateActivity">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="이름"
                      android:textSize="15sp"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:layout_marginBottom="32dp" android:layout_marginTop="32dp"
                      app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.141"
                      android:id="@+id/textView3" android:layout_marginStart="40dp"
                      app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="이메일"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    android:layout_marginTop="44dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"/>
            <TextView
                    android:text="전화번호"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
            <EditText
                    android:id="@+id/et_userupdate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    app:layout_constraintStart_toStartOf="@+id/et_userupdate_email"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="81dp"/>
            <EditText
                    android:id="@+id/et_userupdate_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    app:layout_constraintStart_toStartOf="@+id/et_userupdate_email"
                    android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/et_userupdate_name"/>
            <EditText
                    android:id="@+id/et_userupdate_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:layout_marginTop="19dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_userupdate_phone"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:text="수정"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_userupdate"
                    android:stateListAnimator="@null"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/button_yellow"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="200dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_userupdate_phone"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>