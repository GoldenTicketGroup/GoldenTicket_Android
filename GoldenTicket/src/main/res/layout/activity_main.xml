<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.MainActivity"
        android:id="@+id/dl">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
                android:id="@+id/sv_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent" android:layout_height="match_parent">
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="395dp"
                            android:background="@drawable/back_img_main"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"></LinearLayout>

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="27dp">

                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="10dp"
                                        android:layout_gravity="bottom|center"
                                        android:background="#ffffff" />

                                <TextView
                                        android:id="@+id/tv_main_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="3dp"
                                        android:paddingRight="3dp"
                                        android:fontFamily="@font/notosans_bold"
                                        android:text="민정"
                                        android:textColor="#2e2e2e"
                                        android:textSize="24sp" />
                            </FrameLayout>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginLeft="7dp"
                                    android:fontFamily="@font/notosans_medium"
                                    android:text="님"
                                    android:textColor="#262626"
                                    android:textSize="23sp" />
                        </LinearLayout>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="31dp"
                                android:layout_marginTop="48dp"
                                android:fontFamily="@font/notosans_medium"
                                android:text="오늘 저녁, 이런 공연 어때요?"
                                android:textColor="#262626"
                                android:textSize="23sp" />
                    </FrameLayout>

                    <com.github.rubensousa.gravitysnaphelper.OrientationAwareRecyclerView
                            android:id="@+id/rv_product"
                            android:layout_marginTop="123dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </com.github.rubensousa.gravitysnaphelper.OrientationAwareRecyclerView>
                </FrameLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:paddingBottom="16dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                    >
                        <ImageButton
                                android:id="@+id/ibtnNextLeft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/icon_next_left"
                        />

                        <androidx.viewpager.widget.ViewPager
                                android:id="@+id/vpLotteryConfirm"
                                android:layout_width="345dp"
                                android:layout_height="100dp"
                        />

                        <ImageButton
                                android:id="@+id/ibtnNextRight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/icon_next_main"
                                android:layout_gravity="center"
                        />


                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            cardview:cardElevation="3dp"
                            cardview:cardCornerRadius="22dp">

                        <LinearLayout
                                android:layout_width="331dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                        >

                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="19dp"
                                    android:layout_marginTop="13dp"
                                    android:layout_marginBottom="12dp"
                                    android:src="@drawable/icon_search_main"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="19dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_gravity="center_vertical"
                                    android:hint="공연 검색"
                                    android:textSize="14sp"/>

                        </LinearLayout>




                    </androidx.cardview.widget.CardView>



                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f8f8f8"
                            android:layout_marginTop="17dp"
                    >

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvContents"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="false"
                        >
                        </androidx.recyclerview.widget.RecyclerView>



                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>




        </androidx.core.widget.NestedScrollView>

        <include layout="@layout/toolbar_main"/>
    </FrameLayout>

    <include layout="@layout/activity_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>