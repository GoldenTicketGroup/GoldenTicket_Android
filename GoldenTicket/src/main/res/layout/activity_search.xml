                    android:textSize="15sp"
                    android:textColor="#6e6e6e"
                    android:fontFamily="@font/notosans_light"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:background="@drawable/ripple_effect"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>