<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.MyLotteryActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:id="@+id/ibtn_mylottery_close"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/bt_close"
                android:background="@android:color/transparent"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
        <TextView
                android:id="@+id/tv_mylottery_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="아직 당첨된\n 티켓이 없어요"
                android:textAlignment="center"
                android:textSize="23sp"
                android:textColor="#969696"
                android:fontFamily="@font/notosans_bold"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp">
        <ImageView
                android:id="@+id/iv_mylottery_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/character_fail"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_mylottery_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:layout_centerHorizontal="true"
                android:text="매일매일 새로운 행운의 기회가\n쏟아지고 있어요!"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="@color/font_detail"
                android:lineSpacingExtra="5dp"
                android:fontFamily="@font/notosans_light"/>
        <TextView
                android:id="@+id/tv_mylottery_congrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:text="축하합니다!"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/colorCoral"
                android:lineSpacingExtra="5dp"
                android:fontFamily="@font/notosans_light"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
        <TextView
                android:layout_width="200dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="-10dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorYellow" />
        <TextView
                android:id="@+id/tv_mylottery_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="어떤 공연이 있는지 둘러보러 가볼까요?"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="@color/font_detail"
                android:fontFamily="@font/notosans_light"
                android:background="@android:color/transparent"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="65dp">
        <Button
                android:id="@+id/btn_mylottery_stagelike"
                android:layout_width="263.5dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/btn_mylottery_stagelist"
                android:layout_centerHorizontal="true"
                android:background="@drawable/style_mylottery_btn_grey"
                android:text="관심있는 공연으로 추가하기"
                android:textSize="15sp"
                android:textColor="@color/font_detail"
                android:fontFamily="@font/notosans_medium"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />
        <Button
                android:id="@+id/btn_mylottery_stagelist"
                android:layout_width="263.5dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/style_search_tags_bg"
                android:text="공연 보러 가기"
                android:textSize="15sp"
                android:textColor="@color/font_detail"
                android:fontFamily="@font/notosans_medium"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />
    </RelativeLayout>
</LinearLayout>