<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_white_round"
        app:cardElevation="3dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/cvCard"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="121dp"
                android:layout_height="128dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
        >
            <TextView
                    android:id="@+id/tvCategory"
                    android:background="@drawable/main_contents_title_border"
                    android:text="이번 달 공연"
                    android:fontFamily="@font/notosans_light"
                    android:textSize="12sp"
                    android:textColor="#fda47a"
                    android:lineSpacingExtra="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="87dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="14dp"
                    android:fontFamily="@font/notosans_light"
                    android:textSize="16sp"
                    android:textColor="#262626"
                    android:lineSpacingExtra="4sp"
                    android:text="7월 연휴,\n공연장 나들이\n어때요?"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:background="@drawable/bg_white_round"
        >
            <ImageView
                    android:id="@+id/ivCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/poster_main_benhur"
                    android:scaleType="fitXY"

            />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>

