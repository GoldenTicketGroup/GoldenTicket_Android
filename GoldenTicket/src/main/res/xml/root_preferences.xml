<androidx.preference.PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="@string/messages_header"
            app:iconSpaceReserved="false"
    >

        <SwitchPreferenceCompat
                app:key="pref_keep"
                app:title="관심있는 공연 알림"
                app:iconSpaceReserved="false"/>
        <SwitchPreferenceCompat
                app:key="pref_lottery"
                app:title="당첨 결과 알림"
                app:iconSpaceReserved="false"/>
        <SwitchPreferenceCompat
                app:key="pref_marketing"
                app:title="이벤트 및 마케팅 활용 동의"
                app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory
            app:title="프로필 및 계정"
            app:iconSpaceReserved="false">

        <Preference
                app:key="pref_user_name"
                app:title="민정"
                app:iconSpaceReserved="false"
        />

        <Preference
                app:key="pref_account"
                app:title="연결된 계정"
                app:summary="카카오"
                app:iconSpaceReserved="false"
        />


        <Preference
                app:key="pref_logout"
                app:title="로그아웃"
                app:iconSpaceReserved="false"
        />
        <Preference
                app:key="pref_withdrawal"
                app:title="회원탈퇴"
                app:iconSpaceReserved="false"
        />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
